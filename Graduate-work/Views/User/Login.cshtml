@model LoginViewModel

@section Head{
    <script src="~/js/registration.js"></script>
}

<form action="/User/Login" method="post">
    @Html.HiddenFor(x =>x.ReturnUrl)
    <div class="alert-info">
        @Graduate_work.Localize.language.Login
    </div>

    <div>
        @Html.TextBoxFor(x => x.Login)
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="alert-info">
        @Graduate_work.Localize.language.Login_EnterPassvord
    </div>

    <div class="password">
        <input type="password" id="password-input" placeholder="@Graduate_work.Localize.language.Login_EnterPassvord" name="@nameof(RegistrationViewModel.Password)">
        <div class="flex">
            <label><input type="checkbox" class="password-checkbox"></label>
            <div>
                @Graduate_work.Localize.language.Show_Password
            </div>
        </div>
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="submit">
        <input type="submit" value="@Graduate_work.Localize.language.send" />
    </div>
</form>